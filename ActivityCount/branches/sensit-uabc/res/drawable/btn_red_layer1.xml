<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/btn_empty_border_shape" />
    <item android:drawable="@drawable/btn_gray_border_shape" />
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red_btn" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="15dp"
                android:bottom="7dp" />
        </shape>
    </item>
</layer-list>
